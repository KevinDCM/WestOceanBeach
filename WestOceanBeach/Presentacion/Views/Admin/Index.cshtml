             <!-- Sección Editar Acerca de  (Editar Acerca de ) -->
            <section id="acercade_01" class="container" style="margin-block: 1em; background-color: white">
                       <div class="row">
                                <div class="col-sm-10">
                                    <div id="acercaDe">

                                        <h2 class="new2"> Ediciòn de la secciòn Acerca de</h2>

                                        <form action="javascript:updateAboutUs()">
      
                                              <textarea  class="noteToAdd" id="aboutUs" name="aboutUs" rows="10" cols="70">
      
                                                          @ViewBag.CercaDe
      
                                              </textarea>
                                              <br>
                                              <input class="btn" id="btnAceptAboutUs" type="submit" value="Aceptar">
                                              <input class="btn" id="btnCancelAboutUs" type="submit" value="Cancelar">
                                         </form>

                                    </div>

                                </div>

                            </div>



                            <!-- The Modal -->
                            <div id="myModal" class="modal">

                              <!-- Modal content -->
                              <div class="modal-content">
                                <span class="close">&times;</span>
                                <p id="answer"></p>
                              </div>

                            </div>

                            <script>
                            // Get the modal
                            var modal = document.getElementById("myModal");


                            // Get the <span> element that closes the modal
                            var span = document.getElementsByClassName("close")[0];

                            // When the user clicks on <span> (x), close the modal
                            span.onclick = function() {
                              modal.style.display = "none";
                            }

                            // When the user clicks anywhere outside of the modal, close it
                            window.onclick = function(event) {
                              if (event.target == modal) {
                                modal.style.display = "none";
                              }
                            }
                            </script>

             
