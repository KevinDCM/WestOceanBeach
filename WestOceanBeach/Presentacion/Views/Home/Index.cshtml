            <!-- Reservas Section -->
            <section id="reservas" class="container" style="background-color:white;">
                <div style="display: block !important;" class="row">
                    <h1>Reservas</h1>
                    <br/>
                    <br/>

                     @*solicitar disponibilidad de habitaciones segun el tipo*@
                    <div id="rangoFechas" style="display: block !important; background-color:white;" class="entry-form">

                        <h4>Ver habitaciones disponibles según el tipo</h4>
 
                        <label>Fecha inicio: </label>
	                    <input id="fechaI" type="date" placeholder="dd/mm/yy">

	                    <label>Fecha final: </label>
	                    <input id="fechaF" type="date" placeholder="dd/mm/yy">
	                    <br/>

	                    <label>Tipo de Habitación: </label>

	                    <select id="tipoHabitacion">
		                    <option value="1">Junior</option>
		                    <option value="2">Estándar</option>
		                    <option value="3">Suite</option>
	                    </select>
	
	                    <br/>
	
	                    <button class="submit-btn form-control" id="button" onclick="return ObtenerHabitacionesDisponibles()">Consultar</button> 

                    </div>

                    <br/>
                    <br/>

                    @*carrito para seleccionar habitaciones a reservar*@
                    <div style="display: block !important;" id="divSelectHabitaciones" class="entry-form">
                        
                        <h3>Seleccionar habitaciones a reservar</h3>
                        <label>Seleccione una habitación: </label>
	                    <select style="width: 100px;" id="numsHabitacion" class="sbody">
	                    </select>


                         <label>Fecha inicio: </label>
	                    <input id="fechaI2" type="date">

	                    <label>Fecha final: </label>
	                    <input id="fechaF2" type="date">
	                    <br/>

                        <div style="border-style: solid">
                            <label>Habitaciones escogidas: </label>
                            <p id="habitacionesEscogidas"></p>
	                    </div>
                        <div style="display: inline !important;">
	                        <button style="background-color: blue !important;" class="submit-btn form-control" id="button" onclick="return AgregarHabitacionAlCarrito()">Agregar</button>
                            <button class="submit-btn form-control" id="button" onclick="return VerDatosCliente()">Finalizar</button>   
	                        <button style="background-color: yellow !important" class="submit-btn form-control" id="button" onclick="return ReiniciarReserva()">Reiniciar</button>     
                        </div>
                    </div>

                    <br/>
                    <br/>

                    @*formulario de datos del cliente*@
                    <div style="display: block !important; background-color: lightgray" id="datosCliente" class="entry-form">
                        
                        <h3>Finalizar reservación</h3>

	                    <input type="text" name="cedula" id="cedula" class="form-control" placeholder="Cédula" required autocomplete="off">

	                    <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre" required>
	
	                    <input type="text" name="PrimerApellido" id="PrimerApellido" class="form-control" placeholder="Primer Apellido" required>
	
	                    <input type="text" name="SegundoApellido" id="SegundoApellido" class="form-control" placeholder="Segundo Apellido" required>

	                    <input type="email" name="correo" id="correo" class="form-control" placeholder="Correo electrónico" required>

	                    <input type="text" name="Telefono" id="Telefono" class="form-control" placeholder="Teléfono" required>

	                    <input type="number" name="edad" id="edad" class="form-control" placeholder="Edad" required>

	                    <input type="text" name="Direccion" id="Direccion" class="form-control" placeholder="Dirección" required>
	
	                    <input type="text" name="Nacionalidad" id="Nacionalidad" class="form-control" placeholder="Nacionalidad" required>	
	
	                    <label>Fecha de nacimiento:</label>
	                    <input id="fechaNacimiento" class="form-control" type="date">
	
                        <br/>

	                    <div style="display: block !important;"> 
		                    <label>Datos de pago:</label>
		                    <input name="precio" id="precio" class="form-control" placeholder="Precio Total: $000" readonly required>
		
		                    <input type="number" name="numeroTarjeta" id="numeroTarjeta" class="form-control" placeholder="Número de tarjeta" required>
		
		                    <img src="https://i.postimg.cc/Gpr1Rtth/Captura.png" alt="security" width="200" height="100">
	                    </div>
	
	                    <button class="submit-btn form-control" id="button" onclick="return SolicitarReservacion()">Reservar</button>
                        <button style="background-color: yellow !important;" class="submit-btn form-control" id="button" onclick="return ReiniciarReserva()">Reiniciar</button>   

                    </div>

                </div>
            </section>

