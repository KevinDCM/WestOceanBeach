                <div class="row">
                    <h2>Reservas</h2>
                     <br/>
                    <br/>

                    <form style="margin-top:45px;" asp-action="buscarHabitaciones">
                        <label>Fecha inicio: </label>
                        <input asp-for="fechaI" type="date">

                        <label>Fecha final: </label>
                        <input asp-for="fechaF" type="date">
                        <br/>

                        <select asp-for="tipoHabitacion">
                            <option value="1">Junior</option>
                            <option value="2">Estandar</option>
                        </select>
                        <br/>
                        <br/>

                        <input style="margin-left:50px;" type="submit" value="Buscar habitaciones disponibles" class="btn btn-primary" />
                    </form>
                    <br/>

                    <!-- Button trigger modal -->
                    <button style="margin-left:50px;"type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Reservar
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Reservación</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <form asp-action="reservarHabitacion">
                                        <label class="control-label">Habitaciones disponibles: </label>
                                        <select asp-for="numHabitacion" asp-items="ViewBag.H" class="custom-select">
                                        </select>
                                        <input asp-for="fechaIS" value="@(ViewBag.fIn ?? String.Empty)" readonly />
                                        <input asp-for="fechaFS" value="@(ViewBag.fFn ?? String.Empty)" readonly />
                                        <div class="form-group row">
                                            <label asp-for="nombre" class="control-label">Nombre: </label>
                                            <input asp-for="nombre" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Reservar" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <p>@ViewBag.Respuesta</p>
